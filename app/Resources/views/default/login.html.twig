{% extends 'base.html.twig' %}

{% block body %}

  <div class="container">
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

    <form class="form-signin" action="{{ path('login_check') }}" method="post">
      <h2 class="form-signin-heading">Sign in</h2>
      <label for="username">Username:</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" autofocus="" autocomplete="off" />

      <label for="password">Password:</label>
      <input type="password" id="password" name="_password" />

      {#
          If you want to control the URL the user
          is redirected to on success (more details below)

      <input type="hidden" name="_target_path" value="{{ url('homepage') }}" />
      #}
      <button type="submit">login</button>
    </form>
  </div>

{% endblock %}
