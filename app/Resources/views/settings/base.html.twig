{% extends '::rtbase.html.twig' %}

{% block title %} - Settings{% endblock %}

{% block container %}
  <ul class="nav nav-tabs">
    <li {{ app.request.attributes.get('_route') == 'settings_sensors'?'class="active"':'' }}><a href="{{ url('settings_sensors') }}">Sensors</a></li>
    {#<li><a href="#logging" data-toggle="tab">Logging</a></li>#}
